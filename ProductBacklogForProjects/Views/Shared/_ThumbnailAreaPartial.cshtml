@model ProductBacklogForProjects.Models.ViewModels.ProjectThumbnailAreaModel

@*<div class="headline">
    <h2>@Model.Title</h2>
</div>*@

<br />

@if (Model.Projects != null)
{
    foreach (var thumb in Model.Projects)
    {
        <div class="col-md-4 mb-5 text-center">
            <div class="card h-100">
                <div class="card-body">
                    <h2 class="card-title">@thumb.Name</h2>
                    <p class="card-text">@thumb.Description</p>
                </div>
                <div class="card-footer">
                    <a href="@thumb.Link" class="btn btn-info btn-sm">View Product Backlog</a>
                    <div class="crud">
                        <a type="button" class="btn btn-sm btn-primary"
                           href="@Url.Action("EditProject")?projectId=@thumb.Id">
                            <span class="fa fa-pencil"></span>
                        </a>
                        <a type="button" class="btn btn-sm btn-danger"
                           href="@Url.Action("DeleteProject")?projectId=@thumb.Id">
                            <span class="fa fa-trash"></span>
                        </a>

                    </div>
                </div>
            </div>
        </div>
    }
}